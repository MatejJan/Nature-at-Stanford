html
  background darkolivegreen

  body
    margin 0
    padding 0

    .background-video
      position fixed
      z-index -1
      top 0
      left 0
      right 0
      bottom 0

      video
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        min-width 100%
        min-height 100%
        transition all 2s
