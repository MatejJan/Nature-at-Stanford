*
  box-sizing border-box

html
  background black100
  font-family 'Source Sans Pro', sans-serif

  body
    margin 0
    padding 0

    .background-video
      position fixed
      z-index -1
      top 0
      left 0
      right 0
      bottom 0

      video
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        min-width 100%
        min-height 100%
        transition opacity 2s
        opacity 0

    .header
      position fixed
      z-index 2
      top 0
      left 0
      right 0
      height 5em
      padding-left 5em
      background alpha(cardinal-red, 0.8)
      color white

      a
        text-decoration none
        color white

      .logo
        position absolute
        left 1em
        top 1em
        height 3em

      .title
        margin 0.7rem 0 0.3rem
        font-family 'Crimson Text', serif
        font-size 1.5rem
        line-height 2rem
        font-weight 600

      .byline
        margin 0
        font-size 0.9rem
        font-weight 300

    .posts
      position absolute
      top 0
      left 0
      right 0
      bottom 0

      .slick-list
        height 100%

        .slick-track
          height 100%

          .post
            position absolute !important
            top 0 !important
            left 0 !important
            right 0 !important
            bottom 0 !important
            padding 10em 6em 6em
            overflow scroll

            &:focus
              outline none

            &:only-child
              .post-content
                width 50em
                margin 0 auto

                .post-title
                  font-size 1.5em

            .post-content
              display block
              position relative
              width 30em
              margin 0 0 auto auto
              padding 1em
              background alpha(sandstone20, 0.95)

              .post-title
                text-transform uppercase

              figure
                display block
                margin 1em auto
                max-width 100%

                iframe
                img
                  max-width 100%
                  height auto
                  margin 1em auto

              .email-sign-up
                background neutral6

              .read_more_container
                position relative
                margin 1em auto
                width 10em
                padding 1em
                text-transform uppercase
                background bright-color3
                border-radius 0.5em
                cursor pointer
                text-align center
                transition all 0.5s

                .read_more
                  text-decoration none
                  color transparent

                  &::before
                    content "Find out more"
                    position absolute
                    top 0
                    left 0
                    right 0
                    bottom 0
                    padding 1em
                    color white

                &:hover
                  background lighten(bright-color3, 10%)

      .slick-arrow
        display block
        position absolute
        z-index 1
        top 0
        bottom 0
        width 5em
        padding 0
        border none
        background none
        cursor pointer
        color transparent
        transition all 0.5s

        &::after
          content "âž”"
          position absolute
          top 50%
          left 50%
          transform translate(-50%, -50%)
          color white
          font inherit
          font-size 2em

        &:hover
          background alpha(white, 0.2)

          &::before
            border-color white
            color white

          &.slick-prev::after
            border-right-color white

        &:focus
          outline none

        &.slick-prev
          left 0

          &::after
            transform translate(-50%, -50%) scale(-1, 1)

        &.slick-next
          right 0

      .slick-dots
        position fixed
        bottom 0
        left 0
        right 0
        margin 0
        paddin 0
        list-style none
        text-align center

        li
          display inline-block

          button
            width 2em
            height 2em
            border-radius 2em
            border 0.2em solid transparent
            margin 2em 1em
            color alpha(white, 0.8)
            background deep-tone4
            cursor pointer
            transition all 0.5s
            font inherit
            font-weight 600
            box-shadow 0 3px 3px alpha(black80, 0.4)

            &:hover
              color white
              background lighten(deep-tone4, 10%)

            &:focus
              outline none

          &.slick-active
            button
              border-color alpha(white, 0.8)

              &:hover
                border-color white
